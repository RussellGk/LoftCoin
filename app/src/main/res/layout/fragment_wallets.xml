<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.main.wallets.WalletsFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/wallets_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_212">
        <android.support.v4.view.ViewPager
            android:id="@+id/wallets_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <android.support.v7.widget.CardView
            android:id="@+id/new_wallet"
            android:layout_width="@dimen/spacing_240"
            android:layout_height="@dimen/spacing_160"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/wallet_card_bg"
            app:cardCornerRadius="@dimen/spacing_12">
            <ImageView
                android:layout_width="@dimen/spacing_42"
                android:layout_height="@dimen/spacing_42"
                android:layout_gravity="center"
                android:src="@drawable/ic_wallet_add"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/transactions_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>